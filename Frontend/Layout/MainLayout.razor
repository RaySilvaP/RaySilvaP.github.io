@using Frontend.Services
@inherits LayoutComponentBase
@inject HttpService _httpService

<div class="page">
    <div id="header">
        <div id="logo">
            <span>Ray Silva</span>
        </div>
        <NavBar />
    </div>
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
    <Footer />
</div>

@code
{
    protected override async Task OnInitializedAsync()
    {
        await _httpService.CheckConnectionAsync();
    }
}