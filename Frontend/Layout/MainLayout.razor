@using Frontend.Services
@inherits LayoutComponentBase
@inject HttpService _httpService

<div class="page">
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
    <Footer />
</div>

@code
{
    protected override async Task OnInitializedAsync()
    {
        try
        {
            await _httpService.CheckConnectionAsync();
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
        }
    }
}