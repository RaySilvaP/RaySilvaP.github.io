@using Frontend.Services
@inherits LayoutComponentBase
@inject HttpService _httpService

<div class="page">
    <div id="header">
        <NavBar />
    </div>
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
    <Footer />
</div>

@code
{
    protected override async Task OnInitializedAsync()
    {
        await _httpService.CheckConnectionAsync();
    }
}